<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.eh.neighbor.board.service.mapper.BoardMapper">

	<insert id="writeBoard"
		parameterType="com.eh.neighbor.board.service.vo.BoardVO">
		insert into tb_bbs (bbs_sj, wrter, bbs_cn) values(#{bbsSj}, #{wrter}, #{bbsCn})
	</insert>

	<select id="selectBoard"
		parameterType="com.eh.neighbor.board.service.vo.BoardVO"
		resultType="com.eh.neighbor.board.service.vo.BoardVO">
		SELECT * from tb_bbs order by bbs_id desc
	</select>
	
	<select id="selectUpdate"
		parameterType="com.eh.neighbor.board.service.vo.BoardVO"
		resultType="com.eh.neighbor.board.service.vo.BoardVO">
		select * from tb_bbs where bbs_id=#{bbsId}
	</select>

	<update id="updateBoard"
		parameterType="com.eh.neighbor.board.service.vo.BoardVO">
		update tb_bbs set bbs_sj=#{bbsSj}, wrter=#{wrter}, bbs_cn=#{bbsCn}, updt_dt=now() where bbs_id=#{bbsId}
	</update>
	
	<delete id="deleteBoard"
		parameterType="com.eh.neighbor.board.service.vo.BoardVO">
		delete from tb_bbs where bbs_id=#{bbsId}
	</delete>

</mapper> 